<% obj.each do |a|%>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="well well-lg">
        <div class="article-title">
          <td><%= link_to a.title, article_path(a) %></td>
        </div>
        <div class="article-body"> 
          <td><%= truncate(a.description, length: 100)%></td>
          <div class="article-meta-details">
            <small>Created by: <%= a.user.name if a.user %>, <%= time_ago_in_words(a.created_at)%>, last updated: <%= time_ago_in_words(a.created_at)%> ago</small>
          </div>
        </div>
        <% if logged_in? && (current_user == a.user || current_user.admin?) %>
        <div class="article-actions">
          <%= link_to "Edit this article", edit_article_path(a), class:"btn btn-xs btn-primary"%>
          <%= link_to 'Delete this article', article_path(a), method: :delete, data: {confirm: "Are you sure?"}, class:"btn btn-xs btn-danger" %>
        </div>
        <%end%>
      </div>
    </div>  
  </div>
<%end%>

<div class="row">
  <div class="col-xs-4 col-xs-offset-5" >
    [ <%= link_to "Create new article", new_article_path%> ]  
  </div>
</div>