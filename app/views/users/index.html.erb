<h1 align="center">
  All users
</h1>
<div align="center">
  <%= will_paginate %>
</div>
<div class="center">
  <% @users.each do |u|%>
    <ul class="listing">
      <div class="row">
        <div class="well col-xs-4 col-xs-offset-4">
            <li><%= link_to gravatar_for(u), user_path(u) %></li>
            <li class="article-title" style="padding-top: 10px"> <%= link_to u.name, user_path(u)%> </li> 
            <li><small><%= pluralize(u.articles.count, "article") if u.articles %></small></li>
            <% if logged_in? and current_user.admin? %>
              <li><%= link_to "Delete this user", user_path, method: :delete, data: {confirm: "Are you sure you want to delete the user and all their articles? "}%></li>  
            <% end %>
        </div>
      </div>
  </ul>
  <%end%>
<div align="center">
  <%= will_paginate %>
</div>
</div>